<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/bg01"
    tools:context=".horisontal_cardv.NAVDRAWER"
    tools:showIn="@layout/app_bar_navdrawer">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:paddingHorizontal="16dp"
                android:text="@string/welcome"
                android:textColor="#2D3142"
                android:textSize="26dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:cardCornerRadius="25dp"

                android:orientation="vertical">

                <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="246dp">

                    <Button
                        android:id="@+id/a"
                        android:layout_width="190dp"
                        android:layout_height="100dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/ess"
                        android:text="@string/a"
                        android:textColor="@color/white"
                        android:textSize="63sp"
                        app:layout_row="0" />

                    <Button
                        android:id="@+id/b"
                        android:layout_width="190dp"
                        android:layout_height="100dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/ess"
                        android:text="@string/a"
                        android:textColor="@color/white"
                        android:textSize="63sp"
                        app:layout_row="0" />

                    <Button
                        android:id="@+id/c"
                        android:layout_width="190dp"
                        android:layout_height="100dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/ess"
                        android:text="@string/a"
                        android:textColor="@color/white"
                        android:textSize="63sp"
                        app:layout_column="0"
                        app:layout_row="1" />

                    <Button
                        android:id="@+id/d"
                        android:layout_width="190dp"
                        android:layout_height="100dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/ess"
                        android:text="@string/a"
                        android:textColor="@color/white"
                        android:textSize="63sp"
                        app:layout_column="1"
                        app:layout_row="1" />
                </android.support.v7.widget.GridLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:cardCornerRadius="25dp"

                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="407dp"
                    android:layout_height="174dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/white" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/screen_area"
                android:layout_width="411dp"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints" />
        </LinearLayout>


</android.support.constraint.ConstraintLayout>